import java.util.Scanner;

public class Exercice4 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Donner le nombre d'élèves : ");
        int n = sc.nextInt();

        double[] notes = new double[n];

        double somme = 0;
        double min = 20;
        double max = 0;

        for (int i = 0; i < n; i++) {
            System.out.print("Donner la note de l'élève " + (i+1) + " : ");
            notes[i] = sc.nextDouble();

            somme += notes[i];

            if (notes[i] > max) max = notes[i];
            if (notes[i] < min) min = notes[i];
        }

        double moyenne = somme / n;

        System.out.println("\nSomme = " + somme);
        System.out.println("Note maximale = " + max);
        System.out.println("Note minimale = " + min);
        System.out.println("Moyenne = " + moyenne);

        sc.close();
    }
}
